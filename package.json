{
  "name": "article-automation",
  "version": "1.0.0",
  "description": "Automated SEO article generation and WordPress publishing system",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
